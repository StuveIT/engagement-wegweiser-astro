---
import { ClientRouter } from "astro:transitions";
import GlobalStyles from "../components/GlobalStyles.astro";
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon64.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Engagement Wegweiser</title>

		<ClientRouter />
	</head>
	<body>
		<header class="site-header">
			<div class="banner">
				<a href="/" class="title">Engagement-Wegweiser</a>
				<a
					href="https://stuve.uni-konstanz.de"
					target="_blank"
					id="header-logo"
					class="logo-large"
					target="_blank"
				>
					<img
						id="logo"
						class="stuve-logo"
						src="/images/StuVe_Logo.png"
						alt="StuVe Logo"
					/>
				</a>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>
				Mit Liebe gemacht von der <a
					href="https://www.stuve.uni-konstanz.de/kontakt/stuve-it/"
					>StuVe IT</a
				>
			</p>

			<div>
				<a href="/datenschutz">Datenschutzerkl√§rung</a>
				<a href="/impressum">Impressum</a>
			</div>
		</footer>
	</body>
</html>

<GlobalStyles />
<style>
	.site-header {
		display: flex;
		flex-direction: column;

		background-color: var(--background);
		z-index: 9999;

		width: 100%;
	}

	.site-header .banner .title {
		font-size: 2rem;
		font-weight: var(--bold-weight);
	}

	.site-header .banner .title:hover {
		background-color: transparent;
	}

	.site-header div.banner {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 1rem 0 1rem;

		border-bottom: var(--seperator);
	}

	.site-header div.banner a {
		font-size: 1.5rem;
		border: none;
	}

	.logo-large {
		display: block;
		width: 14rem;
		fill: var(--text);

		padding: 8px;
	}

	a#header-logo:hover {
		background-color: transparent;
	}

	@media screen and (max-width: 800px) {
		.site-header #header-logo {
			content: "";
			background-color: var(--primary);
			width: 50px;
			height: 50px;
		}

		.site-header div.banner .title {
			font-size: 1.5rem;
		}

		.site-header #header-logo svg,
		.site-header #header-logo img {
			display: none;
		}
	}

	body {
		padding: 0;
		margin: 0;
		min-height: 100vh;
		background-color: var(--background);
		color: var(--text);
		font-family: "Ubuntu", sans-serif;
		font-size: 1.4rem;

		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;

		gap: 2rem;
	}

	main {
		position: relative;
		width: 60vw;
	}

	footer {
		bottom: 0;
		left: 0;
		right: 0;
		padding: 1rem;
		text-align: center;
	}

	a.icon {
		background-color: transparent;
		border: none;
	}

	a.icon:hover {
		background-color: transparent;
	}

	.stuve-logo {
		width: 100%;
		height: auto;
	}

	@media screen and (max-width: 800px) {
		body {
			font-size: 1rem;
		}

		main {
			width: 100%;
		}

		main > div.card {
			margin-left: 0;
			margin-right: 0;

			padding: 1.5rem;
		}
	}

	footer {
		margin-top: 2rem;
		padding: 1rem 1rem 2rem 1rem;
		text-align: center;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		box-shadow: var(--standard-box-shadow);
		width: 100%;
	}

	footer .contact {
		display: flex;
		flex-direction: row;
		justify-content: center;

		font-size: 1.2rem;
	}
</style>
